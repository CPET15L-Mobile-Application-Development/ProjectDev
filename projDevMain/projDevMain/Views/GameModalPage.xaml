<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projDevMain.GameModalPage"
             BackgroundColor="#212930">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <Label Text="Game Name" TextColor="White"/>
            <Entry x:Name="nameEntry" Placeholder="Enter game name" TextColor="White" PlaceholderColor="#adb8bd"/>

            <Label Text="Image URL" TextColor="White"/>
            <Entry x:Name="imageEntry" Placeholder="Enter image URL" TextColor="White" PlaceholderColor="#adb8bd"/>

            <Label Text="Price" TextColor="White"/>
            <Entry x:Name="priceEntry" Placeholder="Enter price" TextColor="White" PlaceholderColor="#adb8bd"/>

            <Label Text="Rating" TextColor="White"/>
            <Entry x:Name="ratingEntry" Placeholder="Enter rating" TextColor="White" PlaceholderColor="#adb8bd"/>

            <Label Text="Tags" TextColor="White"/>
            <Entry x:Name="tagsEntry" Placeholder="Enter tags (comma-separated)" TextColor="White" PlaceholderColor="#adb8bd"/>

            <Button Text="Save" Clicked="OnSaveClicked" BackgroundColor="#5d737e" TextColor="#fcfcfc"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
